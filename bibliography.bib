doi = {10.1111/j.1654-1103.2010.01219.x},
file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Young et al. - 2010 - The coconut palm, Cocos nucifera, impacts forest composition and soil characteristics at Palmyra Atoll, Central Pa.pdf:pdf},
issn = {11009233},
journal = {Journal of Vegetation Science},
keywords = {Differential thermal analysis,Ecological networks,Floristic diversity,Pacific islands,Palmyra atoll,Range-expanding,Soil nutrients,Trace metals,Young lab},
mendeley-tags = {Ecological networks,Palmyra atoll,Young lab},
number = {6},
