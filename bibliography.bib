file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Klanderud et al. - 2017 - Biotic interaction effects on seedling recruitment along bioclimatic gradients testing the stress-gradient hyp.pdf:pdf},
issn = {16541103},
