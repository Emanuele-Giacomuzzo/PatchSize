file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Dom{\'{i}}nguez-Garc{\'{i}}a, Dakos, K{\'{e}}fi - 2019 - Unveiling dimensions of stability in complex ecological networks.pdf:pdf},
