issn = {00129658},
journal = {Ecology},
keywords = {Abundance,Extinction,Grassland,Habitat fragmentation,Island biogeography theory (ibt),Occupancy,Roap,Species abundance distribution,Succession},
number = {9},
pages = {2577--2588},
