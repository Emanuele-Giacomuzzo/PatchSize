doi = {10.1007/s00442-002-1135-x},
file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Bell, Neill, Schluter - 2003 - The effect of temporal scale on the outcome of trophic cascade experiments.pdf:pdf},
