file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/van Dorst et al. - 2020 - Does browning-induced light limitation reduce fish body growth through shifts in prey composition or reduced f.pdf:pdf},
issn = {13652427},
journal = {Freshwater Biology},
keywords = {climate change,pelagic food web,perch,roach,water colour},
number = {5},
pages = {947--959},
title = {{Does browning-induced light limitation reduce fish body growth through shifts in prey composition or reduced foraging rates?}},
