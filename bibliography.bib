issn = {19399170},
journal = {Ecology},
keywords = {Cross-ecosystem flux,Cross-habitat foraging,Edge effect,Meta-ecosystem,Metacommunity,Resource subsidy,Spatial subsidy,Spillover predation,Top-down vs. bottom-up control,Trophic cascade},
number = {3},
