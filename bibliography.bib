booktitle = {Advances in Ecological Research},
doi = {10.1016/B978-0-12-386475-8.00005-8},
file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Jacob et al. - 2011 - The Role of Body Size in Complex Food Webs. A Cold Case.pdf:pdf},
isbn = {9780123864758},
