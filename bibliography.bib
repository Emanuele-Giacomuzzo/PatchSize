file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Llope et al. - 2012 - Spatial variability of the plankton trophic interaction in the North Sea A new feature after the early 1970s.pdf:pdf},
issn = {13541013},
journal = {Global Change Biology},
keywords = {Ecological thresholds,Generalized additive models,Landscape ecology,Metaecosystem theory,North Sea,Plankton,Regime shifts,Spatial statistics,Trophic regulation,Varying-coefficient models},
number = {1},
pages = {106--117},
