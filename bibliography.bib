doi = {10.2136/sssaj1998.03615995006200060033x},
file = {:Users/ema/Documents/papers/Soil Science Soc of Amer J - 1998 - Verchot - Effects of Agricultural Runoff Dispersion on Nitrate Reduction in Forested.pdf:pdf},
issn = {03615995},
journal = {Soil Science Society of America Journal},
