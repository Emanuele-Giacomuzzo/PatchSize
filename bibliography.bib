file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Horppila et al. - 2011 - Gender-dependent effects of water quality and conspecific density on the feeding rate of fish - factors behind.pdf:pdf},
issn = {00301299},
journal = {Oikos},
