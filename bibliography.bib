issn = {08888892},
journal = {Conservation Biology},
keywords = {Anthropogenic disturbance,Ecological baselines,Grant Hopcraft,Long-term monitoring,Multiple ecosystem states,Natural disturbance,Protected areas,Rinderpest,Serengeti},
