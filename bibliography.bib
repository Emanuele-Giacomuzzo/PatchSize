keywords = {Alpine communities,Community structure {\&} CC,Competitive effects,Competitive responses,Environmental severity effects,Facilitation,Meta-analysis,Neighbour trait effects,Species range shifts},
mendeley-tags = {Community structure {\&} CC},
title = {{Partitioning net interactions among plants along altitudinal gradients to study community responses to climate change}},
