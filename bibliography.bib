file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Sanders, Kehoe, van Veen - 2015 - Experimental Evidence for the Population-Dynamic Mechanisms Underlying Extinction Cascades of Carnivor.pdf:pdf},
issn = {09609822},
journal = {Current Biology},
