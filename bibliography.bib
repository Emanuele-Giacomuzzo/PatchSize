file = {:Users/ema/Documents/papers/Biological Reviews - 2021 - Loreau - Biodiversity as insurance  from concept to measurement and application.pdf:pdf},
issn = {1469185X},
journal = {Biological Reviews},
keywords = {biodiversity,ecosystems,insurance,management,portfolio,stability,theory},
number = {5},
