file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Vasconcelos et al. - 2019 - Bottom-up and top-down effects of browning and warming on shallow lake food webs.pdf:pdf},
issn = {13652486},
journal = {Global Change Biology},
keywords = {benthic and pelagic habitats,bottom-up and top-down control,browning,food webs,light and nutrients,shallow lake,top predator,warming},
number = {2},
pages = {504--521},
pmid = {30430702},
