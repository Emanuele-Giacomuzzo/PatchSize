issn = {0022-5193},
journal = {Journal of Theoretical Biology},
keywords = {Keystones},
mendeley-tags = {Keystones},
month = {oct},
number = {3},
pages = {372--378},
title = {{The robustness of keystone indices in food webs}},
volume = {260},
year = {2009}
}
