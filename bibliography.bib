booktitle = {Advances in Ecological Research},
doi = {10.1016/B978-0-12-385005-8.00007-1},
file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Yvon-Durocher et al. - 2010 - The temperature dependence of the carbon cycle in aquatic ecosystems.pdf:pdf},
