file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Getz et al. - 2007 - LoCoH Nonparameteric Kernel methods for constructing home ranges and utilization distributions.pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
month = {feb},
number = {2},
title = {{LoCoH: Nonparameteric Kernel methods for constructing home ranges and utilization distributions}},
