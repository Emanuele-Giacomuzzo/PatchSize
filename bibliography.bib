keywords = {Causality,Children,Chimpanzees,Emulation,Imitation},
number = {3},
pages = {164--181},
pmid = {15549502},
title = {{Causal knowledge and imitation/emulation switching in chimpanzees (Pan troglodytes) and children (Homo sapiens)}},
