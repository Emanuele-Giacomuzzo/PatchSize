journal = {Oikos},
keywords = {body size,food-web structure,ontogeny,phylogeny,predator hunting mode,prey antipredator behaviour},
number = {6},
pages = {891--902},
title = {{Trait-dependency of trophic interactions in zooplankton food webs}},
volume = {129},
