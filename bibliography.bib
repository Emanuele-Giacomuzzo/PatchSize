journal = {PLoS ONE},
keywords = {Palmyra atoll,Young lab},
mendeley-tags = {Palmyra atoll,Young lab},
number = {8},
title = {{Effects of spatial subsidies and habitat structure on the foraging ecology and size of geckos}},
