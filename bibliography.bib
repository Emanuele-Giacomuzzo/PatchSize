file = {:Users/ema/Documents/papers/Ecology - 2014 - Muehlbauer - How wide is a stream  Spatial extent of the potential  stream signature  in terrestrial food.pdf:pdf},
issn = {00129658},
journal = {Ecology},
keywords = {Aquatic subsidies,Dispersal,Distance,Food webs,Insects,Meta-analysis,Stream},
