file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Van Renterghem, Botteldooren, Verheyen - 2012 - Road traffic noise shielding by vegetation belts of limited depth.pdf:pdf},
isbn = {0022460X},
issn = {0022460X},
journal = {Journal of Sound and Vibration},
