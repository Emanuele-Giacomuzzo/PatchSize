file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Peralta et al. - 2015 - Phylogenetic diversity and co-evolutionary signals among trophic levels change across a habitat edge.pdf:pdf},
issn = {13652656},
journal = {Journal of Animal Ecology},
keywords = {Co-evolution,Ecological networks,Food web,Habitat fragmentation,ParaFit,Phylogeny,Phylomatic edge effects,Predictions},
mendeley-tags = {Ecological networks,Predictions},
number = {2},
pages = {364--372},
title = {{Phylogenetic diversity and co-evolutionary signals among trophic levels change across a habitat edge}},
volume = {84},
