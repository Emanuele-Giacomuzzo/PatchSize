@article{Gilman2010,
abstract = {Predicting the impacts of climate change on species is one of the biggest challenges that ecologists face. Predictions routinely focus on the direct effects of climate change on individual species, yet interactions between species can strongly influence how climate change affects organisms at every scale by altering their individual fitness, geographic ranges and the structure and dynamics of their community. Failure to incorporate these interactions limits the ability to predict responses of species to climate change. We propose a framework based on ideas from global-change biology, community ecology, and invasion biology that uses community modules to assess how species interactions shape responses to climate change. {\textcopyright} 2010 Elsevier Ltd.},
annote = {To be able to predict how climate change will change biological communities we need to be able to tell how it influences ecological networks and not only the single species. We can study this from two points of view: the close community and the open community. Close communities don't admit dispersal and open do. How climate change influences communities in a closed community depends by: 
{\textperiodcentered}      The size of the ecological network. But not all the times. 
{\textperiodcentered}      The top-down control. If the top-down control is strong it might cause trophic cascades. This is because higher trophic levels are more sensitive to climate change. 
{\textperiodcentered}      The trade-off between competitive ability and stress tolerance. But not all the times. Not always the environment becomes more stressful. Sometimes it becomes less or stays the same. In certain conditions competitors become facilitators. 
At the same time, if we add dispersal to the system, we get open communities, where how climate change influences communities depend by: 
{\textperiodcentered}      Metacommunity dynamics. 
{\textperiodcentered}      Specialism (mutualism/trophic interaction). Some species can't shift their range without also the species from which they depend doing the same. 
{\textperiodcentered}      The new environmental conditions. These can change the competitive outcome between different species. 
{\textperiodcentered}      Ecological release. 
{\textperiodcentered}      Novel interactions taking place in the new community.},
author = {Gilman, Sarah E. and Urban, Mark C. and Tewksbury, Joshua and Gilchrist, George W. and Holt, Robert D.},
doi = {10.1016/j.tree.2010.03.002},
file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Gilman et al. - 2010 - A framework for community interactions under climate change.pdf:pdf},
