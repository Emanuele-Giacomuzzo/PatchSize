doi = {10.12691/jsa-1-1-1},
file = {:Users/ema/Library/Application Support/Mendeley Desktop/Downloaded/Alonso et al. - 2017 - Shouting and Cursing while Driving Frequency, Reasons, Perceived Risk and Punishment.pdf:pdf},
journal = {Journal of Sociology},
number = {1},
pages = {1--7},
title = {{Shouting and Cursing while Driving: Frequency, Reasons, Perceived Risk and Punishment}},
volume = {1},
